{
	"name": "@maya/server",
	"version": "1.0.0",
	"description": "App to manage your pocket money and keep track of your expenses and account between multiple people",
	"main": "index.js",
	"repository": "git@github.com:maya-manager/server.git",
	"author": "Ayush Chugh <ayushchugh2006@gmail.com>",
	"license": "MIT",
	"private": true,
	"scripts": {
		"build": "nest build",
		"format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
		"start": "nest start",
		"start:dev": "nest start --watch",
		"start:debug": "nest start --debug --watch",
		"start:prod": "node dist/main",
		"lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
		"test": "set NODE_ENV=test && jest",
		"test:watch": "NODE_ENV=test jest --watch",
		"test:cov": "jest --coverage",
		"test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
		"prisma:migrate": "prisma migrate dev --name \"init\" --preview-feature",
		"prisma:generate": "prisma generate",
		"prisma:studio": "prisma studio --schema ./src/common/database/schema.prisma",
		"contributors:add": "all-contributors add",
		"contributors:generate": "all-contributors generate",
		"docs": "typedoc",
		"prepare": "husky install"
	},
	"dependencies": {
		"@nestjs/common": "^10.0.4",
		"@nestjs/config": "^3.0.0",
		"@nestjs/core": "^10.0.4",
		"@nestjs/platform-express": "^10.0.4",
		"@prisma/client": "^4.16.1",
		"bcrypt": "^5.1.0",
		"class-transformer": "^0.5.1",
		"class-validator": "^0.14.0",
		"dotenv": "^16.1.4",
		"nodemailer": "^6.9.3",
		"reflect-metadata": "^0.1.13",
		"rxjs": "^7.2.0"
	},
	"devDependencies": {
		"@commitlint/cli": "^17.6.5",
		"@commitlint/config-conventional": "^17.6.6",
		"@types/node": "^20.3.3",
		"@typescript-eslint/eslint-plugin": "5.60.1",
		"@typescript-eslint/parser": "5.60.1",
		"all-contributors-cli": "^6.25.1",
		"commitlint": "^17.6.6",
		"eslint": "8.43.0",
		"eslint-config-google": "0.14.0",
		"eslint-config-prettier": "8.8.0",
		"eslint-import-resolver-typescript": "3.5.5",
		"eslint-plugin-import": "2.27.5",
		"eslint-plugin-jsonc": "2.9.0",
		"eslint-plugin-no-secrets": "0.8.9",
		"eslint-plugin-no-unsanitized": "4.0.2",
		"eslint-plugin-node": "11.1.0",
		"eslint-plugin-pii": "1.0.2",
		"eslint-plugin-prettier": "4.2.1",
		"eslint-plugin-sonarjs": "0.19.0",
		"husky": "^8.0.3",
		"prettier": "2.8.8",
		"prettier-eslint": "15.0.1",
		"typedoc": "^0.24.7",
		"typedoc-plugin-markdown": "^3.15.3",
		"typedoc-plugin-merge-modules": "^5.0.1",
		"typedoc-plugin-missing-exports": "^2.0.0",
		"typedoc-plugin-zod": "^1.0.2",
		"typescript": "^5.1.6",
		"@nestjs/cli": "^10.0.5",
		"@nestjs/schematics": "^10.0.0",
		"@nestjs/testing": "^10.0.4",
		"@types/bcrypt": "^5.0.0",
		"@types/express": "^4.17.13",
		"@types/jest": "29.5.2",
		"@types/nodemailer": "^6.4.8",
		"@types/supertest": "^2.0.11",
		"jest": "^29.5.0",
		"prisma": "^4.16.2",
		"source-map-support": "^0.5.20",
		"supertest": "^6.1.3",
		"ts-jest": "29.1.0",
		"ts-loader": "^9.4.4",
		"ts-node": "^10.0.0",
		"tsconfig-paths": "4.2.0"
	},
	"prisma": {
		"schema": "./src/common/database/schema.prisma"
	},
	"jest": {
		"moduleFileExtensions": [
			"js",
			"json",
			"ts"
		],
		"rootDir": "src",
		"testRegex": ".*\\.spec\\.ts$",
		"transform": {
			"^.+\\.(t|j)s$": "ts-jest"
		},
		"collectCoverageFrom": [
			"**/*.(t|j)s"
		],
		"coverageDirectory": "../coverage",
		"testEnvironment": "node"
	}
}
